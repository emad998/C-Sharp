@model Post
<h2>Edit Post</h2>
<div class="container">
    <form asp-controller="Posts" asp-action="Update" asp-route-postId="@Model.PostId" method="POST">
        <div class="form-group">
            <label asp-for="Topic"></label>
            <span asp-validation-for="Topic" class="text-danger font-weight-bold">

            </span>
            <input asp-for="Topic">
        </div>

        <div class="form-group">
            <label asp-for="Body"></label>
            <span asp-validation-for="Body" class="text-danger font-weight-bold">

            </span>
            <input asp-for="Body">
        </div>

        <div class="form-group">
            <label asp-for="ImgUrl"></label>
            <span asp-validation-for="ImgUrl" class="text-danger font-weight-bold">

            </span>
            <input asp-for="ImgUrl">
        </div>

        <button class="btn btn-light">Submit</button>
    </form>
</div>