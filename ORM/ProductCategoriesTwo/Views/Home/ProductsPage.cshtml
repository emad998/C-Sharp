@model AddProductWrapper


    <form asp-action="ProductsCreate" asp-controller="Home" method="POST">
  <div class="form-group">
    <label asp-for="ProdForm.Name">Name</label>
    <span asp-validation-for="ProdForm.Name"></span>
    <input type="text" class="form-control" asp-for="ProdForm.Name" aria-describedby="emailHelp" placeholder="Enter Name">
    
  </div>
  
  <div class="form-group">
    <label asp-for="ProdForm.Description">Description</label>
    <span asp-validation-for="ProdForm.Description"></span>
    <input type="text" class="form-control" asp-for="ProdForm.Description" aria-describedby="emailHelp" placeholder="Enter Description">
   
  </div>

  <div class="form-group">
    <label asp-for="ProdForm.Price">Price</label>
    <span asp-validation-for="ProdForm.Price"></span>
    <input type="text" class="form-control" asp-for="ProdForm.Price" aria-describedby="emailHelp" placeholder="Enter Price">
    
  </div>


  <button type="submit" class="btn btn-primary">Submit</button>
</form>




<h1>All Products</h1>

@foreach (var product in Model.AllProducts)
{
    <p><a href="/products/@product.ProductId">@product.Name</a></p>
}
