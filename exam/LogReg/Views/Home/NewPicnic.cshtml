@model Picnic

 <form asp-area="" asp-controller="Home" asp-action="Logout" method="POST">
    <button class="btn btn-link">
        Logout
    </button>
</form>


<h1>New Picnic</h1>

<form asp-action="CreatePicnic" asp-controller="Home" method="POST">
  <div class="form-group">
    <label asp-for="Title">Title: </label>
    <span asp-validation-for="Title"></span>
    <input type="text" class="form-control" asp-for="Title" aria-describedby="emailHelp" placeholder="Enter Title">
    
  </div>

   <div class="form-group">
    <label asp-for="Time">Time: </label>
    <span asp-validation-for="Time"></span>
    <input type="text" class="form-control" asp-for="Time" aria-describedby="emailHelp" placeholder="Enter Time">
    
  </div>

  <div class="form-group">
    <label asp-for="PicnicDate">Date: </label>
    <span asp-validation-for="PicnicDate"></span>
    <input type="date" class="form-control" asp-for="PicnicDate" aria-describedby="emailHelp" placeholder="Enter Date">
    
  </div>

  <div class="form-group">
    <label asp-for="DurationNumber">Duration: </label>
    <span asp-validation-for="DurationNumber"></span>
    <input type="text" class="form-control" asp-for="DurationNumber" aria-describedby="emailHelp" placeholder="Enter Time">
    
  </div>


    <div class="form-group">
    <label asp-for="DurationKind"></label>
    <span asp-validation-for="DurationKind"></span>
    <select class="form-control" asp-for="DurationKind">
      <option>Hours</option>
      <option>Minutes</option>
      <option>Days</option>
    </select>
  </div>

  <div class="form-group">
    <label asp-for="Description">Description: </label>
    <span asp-validation-for="Description"></span>
    <input type="text" class="form-control" asp-for="Description" aria-describedby="emailHelp" placeholder="Description">
    
  </div>



  <button type="submit" class="btn btn-primary">Submit</button>
</form>